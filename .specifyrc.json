{
  "repository": "@faire/dssc-test",
  "base": "staging",
  "head": "design/specify/brand",
  "rules": [
    {
      "name": "Design Tokens / Colors",
      "path": "assets/styles/variables/colors.scss",
      "filter": {
        "types": ["color"]
      },
      "parsers": [
        {
          "name": "to-css-custom-properties",
          "options": {
            "formatTokens": {
              "color": "hsl"
            },
            "formatConfig": {
              "selector": ":root[data-theme='dark']"
            }
          }
        }
      ]
    },
    {
      "name": "Design Tokens",
      "path": "assets/styles/variables/general.scss",
      "filter": {
        "types": ["border", "depth", "duration", "gradient", "measurement", "opacity", "shadow"]
      },
      "parsers": [
        {
          "name": "to-css-custom-properties"
        }
      ]
    },
    {
      "name": "Assets",
      "path": "assets/",
      "filter": {
        "types": ["vector"]
      },
      "parsers": [
        {
          "name": "svgo",
          "options": {
            "svgo": {
              "plugins": [
                {
                  "removeDimensions": true
                },
                {
                  "removeAttrs": {
                    "attrs": "*:(fill|stroke)"
                  }
                },
                {
                  "addAttributesToSVGElement": {
                    "attributes": ["width=\"1em\"", "height=\"1em\""]
                  }
                }
              ]
            }
          }
        }
      ],
    }
  ]
}
